<Window x:Class="WpfApp4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp4"
        mc:Ignorable="d"
        Title="감시 클라이언트" Height="250" Width="400" Background="#F5F5F5">
        <Grid Margin="20">
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="🖥️ 서버 연결 설정" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

                <TextBlock Text="서버 IP 주소:" Margin="0,0,0,5"/>
                <TextBox x:Name="IpAddressInput" Text="127.0.0.1" Padding="8" Margin="0,0,0,15"/>

                <Button x:Name="ConnectBtn" Content="서버에 연결하여 감시 시작" 
                        Click="ConnectBtn_Click" Height="45" 
                        Background="#2196F3" Foreground="White" FontWeight="Bold">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <TextBlock x:Name="StatusLabel" Text="상태: 연결 대기 중" 
                           Margin="0,15,0,0" HorizontalAlignment="Center" Foreground="Gray"/>
            </StackPanel>
        </Grid>
</Window>